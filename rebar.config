%% ex: ts=4 sw=4 noexpandtab syntax=erlang

{erl_opts, [debug_info, fail_on_warning]}.
{edoc_opts, [{index_columns, 1}, {sort_functions, false}, {preprocess, true}]}.

{deps, [
  {bson, ".*",
   {git, "https://github.com/comtihon/bson-erlang", {tag, "v0.2.2"}}},
  {pbkdf2, ".*",
   {git, "https://github.com/comtihon/erlang-pbkdf2.git", {tag, "2.0.1"}}},
  {poolboy, ".*",
   {git, "https://github.com/comtihon/poolboy.git", {branch, "master"}}}
]}.

{clean_files, [
  "erl_crash.dump",
  "doc/*.html",
  "doc/erlang.png",
  "doc/edoc-info",
  "doc/stylesheet.css"
]}.
